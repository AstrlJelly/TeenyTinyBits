{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build ${workspaceFolder}/.cache",
            "problemMatcher": []
        },
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "cmake -D CMAKE_EXPORT_COMPILE_COMMANDS=ON -G Ninja -S ${workspaceFolder} -B ${workspaceFolder}/build && mkdir -p ${workspaceFolder}/build && cmake --build ${workspaceFolder}/build",
            "problemMatcher": []
        },
        {
            "label": "Clean Build (Debug)",
            "type": "shell",
            "dependsOn": [ "Clean", "Build (Debug)" ],
            "dependsOrder": "sequence"
        }
    ],
}